<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFunctionActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/activity1headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:cardElevation="20dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="Add Function"
            android:textColor="@color/darkBlue"
            android:textSize="60dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/deget"
            android:layout_width="293dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:hint="Enter Polynom Degree"
            android:textColorHint="@color/darkBlue"
            android:inputType="numberSigned"
            android:gravity="center"
            android:textSize="20dp"
            />


        <EditText
            android:id="@+id/coeff"
            android:layout_width="288dp"
            android:layout_height="143dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:hint="@string/enter_coefficients_seperated_by_for_example_12_14_for_two_coefficients"
            android:textColorHint="@color/darkBlue"
            android:textSize="20dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/SubmitPolynom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:onClick="submit"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:elevation="20dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>